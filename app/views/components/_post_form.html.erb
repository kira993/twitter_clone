<% if user_signed_in? %>
  <div class="panel panel-default post-form-panel">
    <div class="panel-body row">
      <div class="col-sm-1">
        <img src="/penguin.jpg" class="rounded-img" width="50px" height="50px">
      </div>
      <div class="col-sm-11">
        <%= form_for(@newPost) do |f| %>

          <div class="field" style="margin-left: 10px">
            <%= f.text_field :content, autofocus: true, class: "form_control" %>
            <span type="button" class="btn btn-submit" style="float: right;"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>

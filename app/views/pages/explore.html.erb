<div class="row">
  <div class="col-xs-3">

    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Explore</h5>
        <p style="opacity: 0.5; font-size: 90%;">
          This page shows posts from all users. You can see other interesting
          users here and choose to follow them, and they can see you too,
          and follow you.
        </p>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Trends</h5>
        <a href="">#Trend1</a><br>
          <span style="color: grey;">31k posts</span><br><br>
        <a href="">#Trend2</a><br>
          <span style="color: grey;">2434 posts</span><br><br>
        <a href="">#Trend3</a><br>
          <span style="color: grey;">12k posts</span><br><br>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <%= render '/components/post_form' %><% if user_signed_in? %><br> <% end %><br>

    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <img src="/penguin.jpg" class="rounded-img" width="50px" height="50px">
        </div>
        <div class="col-sm-11">
          <!--If signed in, user can click name to view profile, if not, cannot click links -->
          <% if user_signed_in? %>
            <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@p.user_id).first_name %>"><%= User.find(@p.user_id).first_name %></a></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
          <% else %>
            <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).first_name %></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
          <% end %>
          <p class="post-content"><%= @p.content %></p>
        </div>
        <div class="col-sm-12">
          <p class="post-links">
            <span class="glyphicon glyphicon-comment g-links" aria="true"></span>
            <span class="glyphicon glyphicon-retweet g-links" aria="true"></span>
            <span class="glyphicon glyphicon-heart g-links" aria="true"></span>
            <span class="glyphicon glyphicon-option-horizontal g-links" aria="true"></span>
            <a href="">View Conversation</a>
          </p>
        </div>
      </div>
    </div>
    <% end %>

    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
          <center><img src="/twitter-xxl.png" height="25px" width="25px" </img>
            <a href="#top"><p class="opacity: 0.7;">Back to Top<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Who to follow</h5>
        <% for @u in @toFollow do %>
        <!-- If signed in, user can view profiles, follow users and so, if not, cannot click links-->
          <% if user_signed_in? %>
            <p style="font-weight: bold; opacity: 0.85;"><a href="/user/<%= @u.first_name %>"><%= @u.first_name %></a></p>
          <% else %>
            <p style="font-weight: bold; opacity: 0.85;"><%= @u.first_name %></p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <p style="opacity: 0.5; font-size: 90%;">2016 Twitter-Clone  About  Help  Terms  Privacy  Cookies  Ads  Info  Brand  Blog  Status Apps Jobs  Advertise  Bussiness  Media  Developers</p>
      </div>
    </div>


  </div>
</div>

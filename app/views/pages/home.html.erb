<div class="row">
  <div class="col-xs-3">

    <div class="panel panel-default">
      <div class="panel-image hide-panel-body">
        <img src="/banner.jpg" class="panel-image-preview">
        </div>
        <div class="panel-footer text-center">
          <div class="row">
            <div class="col-sm-2">
              <img src="/penguin.jpg" height="50px" width="50px" class="rounded-img home-avatar">
            </div>
            <div class="col-sm-10"><h4><%= current_user.first_name %></h4></div>
            <div class="col-sm-12" style="margin-top: 10px;">
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">TWEETS<br>
                <h6 style="color: #008484; font-size: 200%;">16</h6>
              </div>
              <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                <h6 style="color: #008484; font-size: 200%;">15</h6>
              </div>
            </div>
          </div>

        </div>
      </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Trends</h5>
        <a href="">#Trend1</a><br>
          <span style="color: grey;">31k posts</span><br><br>
        <a href="">#Trend2</a><br>
          <span style="color: grey;">2434 posts</span><br><br>
        <a href="">#Trend3</a><br>
          <span style="color: grey;">12k posts</span><br><br>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <%= render '/components/post_form' %><br><br>

    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <img src="/penguin.jpg" class="rounded-img" width="50px" height="50px">
        </div>
        <div class="col-sm-11">
          <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).first_name %></span> - <span class="post-creation"><%= @p.created_at.to_formatted_s(:short) %></span></p>
          <p class="post-content"><%= @p.content %></p>
        </div>
        <div class="col-sm-12">
          <p class="post-links">
            <span class="glyphicon glyphicon-comment g-links" aria="true"></span>
            <span class="glyphicon glyphicon-retweet g-links" aria="true"></span>
            <span class="glyphicon glyphicon-heart g-links" aria="true"></span>
            <span class="glyphicon glyphicon-option-horizontal g-links" aria="true"></span>
            <a href="">View Conversation</a>
          </p>
        </div>
      </div>
    </div>
    <% end %>

    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
          <center><img src="/twitter-xxl.png" height="25px" width="25px" </img>
            <a href="#top"><p class="opacity: 0.7;">Back to Top<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p style="opacity: 0.5; font-size: 90%;">2016 Twitter-Clone  About  Help  Terms  Privacy  Cookies  Ads  Info  Brand  Blog  Status Apps Jobs  Advertise  Bussiness  Media  Developers</p>
      </div>
    </div>
  </div>
</div>

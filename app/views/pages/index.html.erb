<% if !user_signed_in? #if the user IS NOT signed in %>
  <style>
    body {
      background: linear-gradient(
        rgba(0,0,0,0.7),
        rgba(0,0,0,0.7)
        ),url("/backgroundLanding.jpg") no-repeat center center fixed;


      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
    h1 {
      color: white;
      font-weight: bold;
    }
    .container-index {
      margin-right: 15%;
      margin-left: 15%;
    }
    .text {
      color: white;
      font-weight: 300;
      font-size: 150%;
    }
    .footer-links {
      text-align: center;
      color: white;
      margin-top: 30%;
      font-size: 75%;
    }
    .log-in {
      float: right;
      width: 350px;
      height: 100px;
      margin-top: 10%;
    }
    .sign-up {
      float: right;
      width: 350px;
      height: 210px;
    }
  </style>

  <div class="container-index row">
    <div class="col-sm-6">
      <h1> Welcome to Twitter-Clone. </h1>
      <p class="text">
        Connect with your buddies, chat with them, <br>
        share your adventures. Have fun! <br>
        Just lika a blog, but in just 160 characters!
      </p>
    </div>
    <div class="col-sm-6">
    <div class="log-in panel">
      <%= form_for(:user, :url=> session_path(:user)) do |f| %>
        <%= f.text_field :email %>
        <%= f.password_field :password %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <%= f.submit 'Sign in' %>
        <%= link_to "Forgot your password?", new_password_path(:user) %>
      <% end %>
    </div>
    <div class="sign-up panel">
      <%= form_for(:user, :url=> registration_path(:user)) do |f| %>
        <%= f.text_field :first_name, autofocus: true %>
        <%= f.label :first_name %>
        <%= f.text_field :last_name %>
        <%= f.label :last_name %><br/>
        <%= f.number_field :birth_year %>
        <%= f.label :birth_year %><br/>
        <%= f.text_field :email %>
        <%= f.label :email %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minumum)</em>
          <% end %><br/>
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.label :password %><br>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.label :password_confirmation %><br/>
        <%= f.submit 'Sign up' %>
      <% end %>
    </div>
  </div>
  <div class="col-sm-12">
    <p class="footer-links">About  Help  Blog  Status  Jobs  Terms  Privacy  Cookies  Ads  Info  Brand  Advertise  Bussiness  Media  Developers  Directory  Twitter-Clone  2016</p>
  </div>
<% else #if the user IS signed in %>
  <script>document.location = "/home"</script>
<% end %>
